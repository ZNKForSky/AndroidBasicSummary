<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popupwindow_text_style" parent="Widget.AppCompat.PopupWindow">
        <!--PopupWindow Style-->
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
    </style>

    <!--view水平 公共样式  -->
    <style name="viewh_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:background">@color/gray_line</item>
    </style>
</resources>
